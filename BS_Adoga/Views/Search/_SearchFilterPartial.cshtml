@model IQueryable<BS_Adoga.Models.ViewModels.Search.SearchCardViewModel>
<nav id="nav" class="search-filter-nav">
    <div class="search-bar">
        <div class="nav-item" id="choose-city">
            @*<i class="fas fa-search"></i>
                <div class="choose-info city-info">
                    <p id="city-name">台南市</p>
                    <p id="place-left">794間住宿還有空房</p>
                </div>*@

            <el-select style="color: #666;" id="inputGroupSelectFilter" v-model="value" placeholder="&#xf002; 搜尋地區" filterable name="search">
                <el-option-group v-for="group in BigOption"
                                 :key="group.label"
                                 :label="group.label">
                    <el-option v-for="item in group.options"
                               :key="item.value"
                               :label="item.label"
                               :value="item.value">
                        <span style="float: left">{{item.label}}</span>
                        <span style="float: right; color: #8492a6; font-size: 13px">{{item.price}}</span>
                    </el-option>
                </el-option-group>
            </el-select>
        </div>

        <div class="nav-item">
            <div class="search-date">
                <i class="fas fa-calendar-alt"></i>
                <div class="choose-info">
                    <p id="checkIn-date">2021年5月17日</p>
                    <p id="date-description">週一</p>
                </div>
            </div>
            <div class="line"></div>
            <div class="search-date">
                <i class="fas fa-calendar-alt"></i>
                <div class="choose-info">
                    <p id="checkOut-date">2021年5月19日</p>
                    <p id="date-description">週三</p>
                </div>
            </div>
        </div>

        <div class="nav-item">
            <div id="person-info" class="choose-bar">
                <i class="fas fa-user-friends"></i>
                <div class="choose-info">
                    <p id="final-person"></p>
                    <p id="final-room"></p>
                </div>
                <i class="fas fa-angle-down"></i>
            </div>
            <div id="person-box">
                <div id="choosing-box">
                    <div class="travel single">
                        <p>單人旅遊</p>
                        <p>1間客房, 1位大人</p>
                    </div>
                    <div class="travel couple">
                        <p>雙人旅遊</p>
                        <p>1間客房, 2位大人</p>
                    </div>
                    <div class="travel family">
                        <p>家庭旅遊</p>
                        <div>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </div>
                    <div class="travel group">
                        <p>團體旅遊</p>
                        <div>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </div>
                    <div class="travel bussiness">
                        <p>商務旅遊</p>
                        <div>
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </div>
                </div>
                <div id="count-person">
                    <div class="count-box" id="room-num">
                        <i class="fas fa-minus" v-on:click="minus('room')"></i>
                        <p>
                            <span>{{room}}</span>間房間
                        </p>
                        <i class="fas fa-plus" v-on:click="plus('room')"></i>
                    </div>
                    <div class="count-box" id="adult-num">
                        <i class="fas fa-minus" v-on:click="minus('adult')"></i>
                        <p>
                            <span>{{adult}}</span>位大人
                        </p>
                        <i class="fas fa-plus" v-on:click="plus('adult')"></i>
                    </div>
                    <div class="count-box" id="kids-num">
                        <i class="fas fa-minus" v-on:click="minus('kids')"></i>
                        <p>
                            <span>{{kids}}</span>位兒童
                        </p>
                        <i class="fas fa-plus" v-on:click="plus('kids')"></i>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-primary btn-search">搜出好價</button>
    </div>
</nav>


<!-- VueJS -->
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://unpkg.com/vue/dist/vue.js"></script>
<script src="https://unpkg.com/element-ui/lib/index.js"></script>
<link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
<script>
    var filter = new Vue({
        el: '#nav',
        data: {
            room: 1,
            adult: 1,
            kids: 0,
            BigOption: [
                {
                    label: '熱門城市',
                    options: [
                        {
                            value: 'Chengdu',
                            label: '成都'
                        }, {
                            value: 'Shenzhen',
                            label: '深圳'
                        }, {
                            value: 'Guangzhou',
                            label: '广州'
                        }, {
                            value: 'Dalian',
                            label: '大连'
                        }
                    ]
                },
                {
                    label: '飯店名稱',
                    options: [
                        {
                            value: 'Chengdu',
                            label: '成都'
                        }, {
                            value: 'Shenzhen',
                            label: '深圳'
                        }, {
                            value: 'Guangzhou',
                            label: '广州'
                        }, {
                            value: 'Dalian',
                            label: '大连'
                        }
                    ]
                }
            ],
            options2: [],
            value: ''
        },
        methods: {
            minus: function (e) {
                switch (e) {
                    case 'room':
                        if (this.room > 1) {
                            this.room -= 1;
                        }
                        else { alert("數量不可為0！"); }
                        break;
                    case "adult":
                        if (this.adult > 1) {
                            this.adult -= 1
                        }
                        else { alert("數量不可為0！"); }
                        break;
                    default://小孩
                        if (this.kids > 0) {
                            this.kids -= 1
                        }
                        else { alert("數量不可少於0！"); }
                        break;
                }
            },
            plus: function (e) {
                switch (e) {
                    case 'room':
                        if (this.room < 9) {
                            this.room += 1;
                        }
                        else { alert("數量最多為9！"); }
                        break;
                    case "adult":
                        if (this.adult < 9) {
                            this.adult += 1
                        }
                        else { alert("數量最多為9！"); }
                        break;
                    default://小孩
                        if (this.kids < 9) {
                            this.kids += 1
                        }
                        else { alert("數量最多為9！"); }
                        break;
                }
            },
            handleFilter(letter) { //下拉
                if (!letter) {
                    this.options2 = this.BigOption
                    return
                }
                if (letter.lenght === 3) {
                    this.options2 = this.options.filter(v => {
                        return v.label.includes(letter)
                    })
                }
                else {
                    this.options2 = this.options.filter(v => {
                        return v.label.includes(letter)
                    })
                }
            }
        },
        mounted() { //下拉
            this.options2 = this.BigOption
        }
    })
</script>


